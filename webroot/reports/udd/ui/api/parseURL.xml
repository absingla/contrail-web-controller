<urlLists>
    <require>
        <define>parseURLReq</define>
        <path>process.mainModule.exports["corePath"] + '/src/serverroot/common/parseURLRequire'</path>
    </require>
    <require>
        <define>uddapi</define>
        <path>./udd.api</path>
    </require>
    <require>
        <define>cdbapi</define>
        <path>./cdb.api</path>
    </require>
    <item>
        <url>/api/cassandra/query</url>
        <method>post</method>
        <timeout>600</timeout>
        <feature>query-engine</feature> <!-- TODO: Create a new feature role for CDB -->
        <callback>cdbapi.runQuery</callback>
    </item>
    <item>
        <url>/api/udd/widget/create</url>
        <method>post</method>
        <timeout>600</timeout>
        <feature>query-engine</feature> <!-- TODO: Create a new feature role for UDD -->
        <callback>uddapi.createWidget</callback>
    </item>
</urlLists>


<script type="text/x-handlebars-template" id="query-page-template">
    <div id="qe-{{queryPrefix}}-container">
        <div id='qe-{{queryPrefix}}-form-container'>
            <div id='qe-{{queryPrefix}}-form'></div>
        </div>
        <div id="qe-{{queryPrefix}}-results-container">
            <div id='qe-{{queryPrefix}}-results'></div>
        </div>
    </div>
</script>

<script type="text/x-handlebars-template" id="query-select-popup-template">
    <form id="{{queryPrefix}}-select-popup-form" onsubmit="return false;">
        <div class="row-fluid">
            <a class="pull-right selectAllLink " data-bind="text: select_data_object().select_all_text, click: select_data_object().on_select_all"></a>
        </div>
        {{#each fields}}
            {{#IfCompare @index 0 operator="=="}}
                <div class="row-fluid">
            {{else}}
                {{#IfCompare @index 0 operator="%3"}}
                    </div>
                    <div class="row-fluid">
                {{/IfCompare}}
            {{/IfCompare}}
            <div class="span4">
                <input type="checkbox" name="{{this.name}}" value="{{this.name}}" data-bind="checked: select_data_object().checked_fields, click: select_data_object().on_select, enable: select_data_object().enable_map['{{this.name}}']" class="ace-input"/> <span class="ace-lbl"> {{this.name}}</span>
            </div>
        {{/each}}
        </div>
    </form>
</script>

